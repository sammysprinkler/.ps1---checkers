{
  "GitHubCredentials": {
    "Username": "%GITHUB_USERNAME%",
    "Email": "%GITHUB_EMAIL%",
    "Token": "%GITHUB_TOKEN%"
  },

  "SystemPaths": {
    "HostsFilePath": "%WINDIR%\\System32\\drivers\\etc\\hosts",
    "SAMFilePath": "%WINDIR%\\System32\\config\\SAM"
  },

  "Paths": {
    "LogDirectory": "%USERPROFILE%\\PC_Checks\\logs\\",
    "OutputDirectory": "%USERPROFILE%\\PC_Checks\\output\\",
    "DefaultDocumentsPath": "%USERPROFILE%\\Documents\\"
  },

  "MonitoredFiles": [
    "%WINDIR%\\System32\\drivers\\etc\\hosts",
    "%WINDIR%\\System32\\config\\SAM"
  ],

  "SuspiciousProcesses": [
    "nc",
    "netcat",
    "ncat",
    "meterpreter",
    "powershell",
    "cmd.exe",
    "taskmgr.exe",
    "regedit.exe"
  ],

  "SuspiciousPorts": [
    4444,
    1337,
    8080,
    9001,
    3389,
    22,
    23,
    21
  ],

  "MaxLogEntries": 100,

  "ErrorKeywords": [
    "failed password",
    "error",
    "unauthorized",
    "access denied",
    "login failure",
    "account locked"
  ],

  "FileChangeDetection": {
    "HashAlgorithm": "SHA256",
    "CheckIntervalMinutes": 60
  },

  "NetworkMonitoring": {
    "MaxConnectionsToCheck": 50,
    "SuspiciousIPAddresses": [
      "%PUBLIC_IP%",
      "%LAN_NETWORK%"
    ]
  },

  "SystemChecks": {
    "ProcessCheckIntervalMinutes": 10,
    "LogCheckIntervalMinutes": 30
  },

  "Logging": {
    "DefaultLogLevel": "INFO",
    "ConsoleOutput": true
  }
}
